<Window x:Class="WeatherInfo.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="485.769" Width="375"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="Список городов" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="130" Margin="10,26,0,0" VerticalAlignment="Top" Width="347">
            <Grid>            
            <Label Content="Список стран" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="listOfCountries_cbx" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="321"/>
            <Label Content="Список городов" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="listOfCitiies_cbx" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="321"/>
            </Grid>
        </Border>
        
        
        <Label Content="Прогноз" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="74" Margin="10,187,0,0" VerticalAlignment="Top" Width="347">
            <Grid>
                <Label Content="Формат" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.024,0.222"/>
                <ComboBox x:Name="listOfFormatsForecast_cbx" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="325"/>

            </Grid>
        </Border>

        <Label Content="Задержка всплывающей подсказки" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="74" Margin="10,292,0,-7" VerticalAlignment="Top" Width="347">
            <Grid>
                <Label Content="Задержка" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.024,0.222"/>
                <ComboBox x:Name="listOfVariablesDelay_cbx" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="325"/>

            </Grid>
        </Border>
        <CheckBox x:Name="autostartFlag_chbx" Checked="autostartFlag_chbx_Checked" Content="Автозапуск с Windows" HorizontalAlignment="Left" Margin="10,381,0,0" VerticalAlignment="Top"/>
        <Button x:Name="about_btn" Click="about_btn_Click" Content="О программе" HorizontalAlignment="Left" Margin="10,411,0,0" VerticalAlignment="Top" Width="84" Height="23"/>
        <Button x:Name="accept_btn" Click="accept_btn_Click" Content="OK" HorizontalAlignment="Left" Margin="184,411,0,0" VerticalAlignment="Top" Width="84" Height="23"/>
        <Button x:Name="cancel_btn" Click="cancel_btn_Click" Content="Отмена" HorizontalAlignment="Left" Margin="273,411,0,0" VerticalAlignment="Top" Width="84" Height="23"/>
    </Grid>
</Window>
