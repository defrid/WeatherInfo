<Window x:Class="WeatherInfo.ThirdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThirdWindow" Height="601.045" Width="300">
    <DockPanel>
        <Label Name="City" Content="City" HorizontalAlignment="Center" DockPanel.Dock="Top"></Label>
        <DockPanel DockPanel.Dock="Bottom">
            <Button Name="Update" Content="Обновить" HorizontalAlignment="Left" Margin="20 3" Height="25" Width="65" ></Button>
        </DockPanel>
        <StackPanel Name="Container">
            <Border BorderBrush="Black" BorderThickness="1">
                <DockPanel >
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="http://openweathermap.org/img/w/10d.png" Width="64"></Image>
                        <StackPanel Margin="5 0">
                            <Label Content="1 july,BT,Day" Padding="0"></Label>
                            <Label Content="Pressure: 760 mm Hg" Padding="0"></Label>
                            <Label Content="Temp:+25" Padding="0"></Label>
                            <Label Content="Vlaga:33%" Padding="0"></Label>
                            <Label Content="Wind: 3..4 mps" Padding="0"></Label>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </Border>
        </StackPanel>
    </DockPanel>
</Window>
